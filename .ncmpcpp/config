## ~/.ncmpcpp/config

# mpd info
mpd_host      = "localhost"
mpd_port      = "6600"
mpd_music_dir = "~/Music/Library"

# Appearance settings
user_interface = "alternative"
colors_enabled = "yes"

# Header window
header_window_color                   = 245
header_visibility                     = "no"
alternative_header_first_line_format  = "$b$(7)%t$(end)$/b"
alternative_header_second_line_format = "$(7)%a - %b (%4y)$(end)"

# Main window
main_window_color   = 245
song_list_format    = "%a  $(1)%t$(end)$R%l"
now_playing_prefix  = "$b$(7)"
now_playing_suffix  = "$(end)$/b"
current_item_prefix = "$r"
current_item_suffix = "$/r"
playlist_disable_highlight_delay = 1
window_border_color = 7

# Columns
titles_visibility        = "no"
song_columns_list_format = "(25)[245]{a} (65)[7]{t} (10)[245]{lr}"
current_item_inactive_column_prefix = "$u"
current_item_inactive_column_suffix = "$/u"

# Media library
song_library_format                = "%t"
media_library_primary_tag          = "album_artist"
media_library_albums_split_by_date = "no"

# Search colors
color1 = 7
color2 = 245

# Visualizer
visualizer_fifo_path   = "/tmp/mpd.fifo"
visualizer_output_name = "mpdfifo"
visualizer_in_stereo   = "yes"
visualizer_type        = "spectrum"
visualizer_color       = 7

# Display types
playlist_display_mode      = "columns"
browser_display_mode       = "columns"
search_engine_display_mode = "columns"

# Progress Bar
progressbar_look          = "▃▃▃"
progressbar_color         = 245
progressbar_elapsed_color = 7
