## ~/.ncmpcpp/bindings

# Vim-like bindings
def_key "k"
  scroll_up
def_key "j"
  scroll_down
def_key "ctrl-u"
  page_up
def_key "ctrl-b"
  page_up
def_key "ctrl-d"
  page_down
def_key "ctrl-f"
  page_down
def_key "d"
  delete_playlist_items
def_key "ctrl-l"
  next_column
def_key "ctrl-h"
  previous_column
